a
  text-decoration none
  display flex
.logo-text
  text-shadow 1px 2px 0 rgba(0, 0, 0, 0.42)
  color #ffffff
  font-size 17px
  font-style italic
  text-transform uppercase
  letter-spacing 0.29px
  font-family "LucidaSans", sans-serif
  margin auto 0
  margin-left 10px

