/*HEADER*/
.menu
  background-image linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%)
  display flex
  @media screen and (min-width: 1300px)
    background-image none
    justify-content space-between
  .logo
    flex-grow 1
    justify-content center
    display flex
    background-image linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%)
    @media screen and (min-width: 1300px)
      margin-top 28px
      background-image none
      flex-grow 0
    img
      margin-left -9px
      margin-right 9px
      @media screen and (min-width: 1300px)
        height 80px
        margin 0
    &:hover>img
      transition-duration 1s
      transform rotateY(180deg)
    &:hover>.logo-text
      color aquamarine
  a
    text-decoration none
    display flex
  .logo-text
    margin auto 0
    text-shadow 1px 2px 0 rgba(0, 0, 0, 0.42)
    color #ffffff
    font-family "LucidaSans", sans-serif
    font-size 19px
    line-height 40px
    font-style italic
    text-transform uppercase
    letter-spacing 0.41px
    transition-duration 0.2s
    
    @media screen and (min-width: 1300px)
      font-size: 41px;
    
  nav
    flex-grow 3
    display flex
    box-sizing border-box
    position relative
    z-index 3
    @media screen and (min-width: 1300px)
      flex-grow 0
      width 453px
      align-self flex-end
      &:before
        content ''
        background-color #f5c50655
        position absolute
        top -8px
        left -8px
        width 453px
        height 40px
        z-index 0        
      &:after
        content ''
        background-color #f5c50655
        position absolute
        top -4px
        left -4px
        width 453px
        height 40px
        z-index 0
    ul
      background-color #f5c506
      padding 0
      margin 0
      list-style none
      display flex
      flex-grow 1
      z-index 4
      @media screen and (min-width 1300px)
        padding-left 20px
      li
        color #9b7d08
        font-family "SegoeWP", sans-serif
        font-size 19px
        font-weight 400
        text-transform uppercase
        letter-spacing 0.19px
        border-right 1px solid rgba(0,0,0, 0.11)
        box-sizing border-box
        line-height 62px
        margin 0
        justify-content space-evenly
        display flex
        transition-duration 0.3s
        @media screen and (min-width 1300px)
          font-size 17px
          letter-spacing 0.17px
          line-height 40px
      a
        margin 0
        display inline-block
        flex-grow 1
        &:hover>li
          color white
        &:hover>li>img
          transition-duration .5s
          transform rotateZ(360deg)
        img
          height 19px
          margin auto 0
        

/*SECTION 2 - PLAYER*/
basic-anim-xin()
