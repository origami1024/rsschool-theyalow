@import "./fontfaces.styl"

body
  margin 0
  background-color #474747
  font-family sans-serif

.sectionWrapper
  max-width 640px
  margin 0 auto

/*HEADER*/
.menu
  background-image linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%)
  display flex
  .logo
    flex-grow 1
    justify-content center
    display flex
    background-image linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%)
    &:hover>img
      transition-duration 1s
      transform rotateY(180deg)
    &:hover>.logo-text
      color aquamarine
  a
    text-decoration none
    display flex
  .logo-text
    text-shadow 1px 2px 0 rgba(0, 0, 0, 0.42)
    color #ffffff
    font-family "LucidaSans", sans-serif
    font-size 19px
    line-height 40px
    font-style italic
    text-transform uppercase
    letter-spacing 0.41px
    transition-duration 0.2s
    
  nav
    background-color #f5c506
    flex-grow 3
    display flex
    ul
      padding 0
      margin 0
      list-style none
      display flex
      margin auto 0
      flex-grow 1
      li
        color #9b7d08
        font-family "SegoeWP", sans-serif
        font-size 19px
        font-weight 400
        text-transform uppercase
        letter-spacing 0.19px
        border-right 1px solid rgba(0,0,0, 0.11)
        box-sizing border-box
        line-height 62px
        margin 0
        justify-content space-evenly
        display flex
        transition-duration 0.3s
      a
        margin 0
        display inline-block
        flex-grow 1
        &:hover>li
          color white
        &:hover>li>img
          transition-duration 1s
          transform rotateZ(360deg)
        

/*SECTION 2 - PLAYER*/
basic-anim-xin()
  transition-duration 0.3s
  &:hover
    opacity 1
    cursor pointer

.player-section
  position relative
  .video-controls
    position absolute
    bottom 0
    top 0
    width 100%
    display flex
    padding-bottom 22px
    .btn-bigplay
      position absolute
      background-color #f5c506
      opacity 0.72
      border-radius 100%
      background-image url('./assets/img/bigPlayTria.svg')
      background-repeat no-repeat
      background-position 55% center
      top calc(50% - 34px)
      left calc(50% - 34px)
      width 67px
      height 67px
      z-index 5
      basic-anim-xin()
    .video-controls__inner
      //background-color black
      width 78%
      margin 0 auto
      margin-top auto
      margin-bottom 0
      display flex
      align-items center
      justify-content space-between
  .btn-play
    background-color #f5c506
    opacity 0.37
    width 27px
    height 27px
    border 0
    background-image url('./assets/img/playTriangle.svg')
    background-position 55% 50%
    background-repeat no-repeat
    padding 0
    basic-anim-xin()
  .btn-mute
    background-image url('./assets/img/btnMute.svg')
    border 0
    width 15px
    height 15px
    background-color transparent
    padding 0
    transition-duration 0.3s
    &:hover
      cursor pointer
      transform scale(1.5)
.progress-fill
  width 182px
  height 12px
  background-color #f5c506
  border-radius 5px 0 0 5px
  position absolute
  top 0
  left 0
  opacity 1
.progress-thumb
  position absolute
  height 12px
  width 12px
  background-color #fff
  top center
  right -6px
  border-radius 100%
  transition-duration 0.3s
  //visibility hidden

.progress-rack
  width 404px
  height 12px
  background-color #f5c50645
  //opacity 0.28
  border-radius 5px
  position relative
  transition-duration 0.2s
  &:hover
    cursor pointer      
    outline 1px solid #999d
  &:hover>.progress-fill>.progress-thumb
    transform scale(1.5)
    visibility visible
  


/*SECTION 3 - mid-bar*/
.mid-bar-bg-wrapper
  background-image url('./assets/img/mid-bar-bgup.png'), url('./assets/img/mid-bar-bgdown.png')
  
.mid-bar
  overflow visible
  z-index 10
  position relative
  margin-top -12px
  background-color rgba(255,255,255, 0.5)
  padding-top 5px
  height 174px
  display flex
  flex-direction column
  .bgLayer2wrap
    flex-grow 1
    padding 0 18px 0 0px
    position relative
    //margin-top 20px
    display flex
    justify-content space-between
    align-items flex-end
    background-image url('./assets/img/mid-bar-bgdown.png')
    background-color rgba(255,255,255, 0.75)
    padding-bottom 28px
  .mid-bar__header
    margin 0 auto
    margin-top 20px
    font-family "SegoeUI", sans-serif
    font-size 23px
    font-weight 300
    text-transform uppercase
    letter-spacing 0.23px

  .mid-bar__item
    display flex
    flex-direction column
    flex-grow 1
    flex-basis 33%
  
/*section xxx 1*/
.sec1-bg-wrapper
  background-color #fff
.sec1
  display flex
  padding 10px 9px
  //padding-right 8
  box-sizing border-box
.sec1__inner
  flex-grow 1
  flex-shrink 0
  flex-basis calc(50% - 9px)
  position relative
  margin-right 9px
  display flex
  &:nth-child(1)
    flex-shrink 1
    flex-basis calc(50% - 19px)
  &:last-child
    margin-right 0
  .video-controls
    position absolute
    bottom 0
    top 0
    width 100%
    display flex
  .btn-bigplay
    position absolute
    background-color #f5c506
    opacity 0.9
    border-radius 100%
    background-image url('./assets/img/bigPlayTria.svg')
    background-repeat no-repeat
    background-position 55% center
    top calc(50% - 22px)
    left calc(50% - 31px)
    width 61px
    height 61px
    z-index 5
    basic-anim-xin()
  .sec1__text-block
    background-color #ec9e03
    flex-grow 1
    padding 16px 22px 16px 26px
    //padding-right 0px
  .sec1__p
    margin 0
    color #ffffff
    font-family "SegoeWPLight", sans-serif
    font-size 29px
    font-weight 300
    line-height 33.31px
    // Text style for "L, orem ip"
    letter-spacing 0.33px
    -webkit-hyphens auto
    -moz-hyphens auto
    -ms-hyphens auto
    hyphens auto
    word-wrap break-word
  .btn-plus
    position absolute
    width 10px
    height 10px
    right 14px
    bottom 16px
    background-image url('./assets/img/btnPlus.svg')
    border 0
    background-color transparent
    background-repeat no-repeat
    padding 0
    transition-duration 0.3
    opacity 0.7
    &:hover
      cursor pointer
      opacity 1
      transform scale(2)
      
  

/*twitter*/
.twitter
  background-color #f5c507
  background-image url('./assets/img/twitter-bg.svg')
  background-repeat no-repeat
  background-position calc(20% - 10px) calc(50% + 10px)
  display flex
  flex-direction row-reverse
  height 213px
  padding-top 20px
.r-aligner
  flex-grow 0
  flex-shrink 0
  padding-right 5px
  flex-basis calc(50% - 9px)
  display flex
  flex-direction column
  justify-content space-evenly
.twit
  background-image url('./assets/img/twit-wrap2.svg')
  background-repeat no-repeat
  background-size contain
  padding 5px 28px
  box-sizing border-box
  width 285px
  min-height 46px
  p
    color #8f8e8e
    font-family "ArialMT", sans-serif
    font-size 13px
    font-weight 400
    letter-spacing 0.13px
    margin 0
    box-sizing border-box

.twit-controls
  width 285px
  display flex
  align-items center
  box-sizing border-box
  //outline 4px dashed gray
.twit-inp
  height 29px
  box-shadow inset 3px 4px 5px rgba(0, 0, 0, 0.11)
  border 1px solid rgba(0, 0, 0, 0.15)
  background-color #ffffff
  padding 0 5px
  box-sizing border-box
  border-top-left-radius 10px
  border-bottom-left-radius 10px
  margin-left 14px
  flex-grow 1
  transition-duration 0.1s
  &:hover
    border 1px solid aquamarine
.send-twit-btn
  color #ffffff
  font-family "ArialMT", sans-serif
  font-size 15px
  font-weight 400
  letter-spacing 0.15px
  background-image linear-gradient(to top, #d08e0b 0%, #e9a825 100%)
  width 77px
  height 100%
  box-sizing border-box
  border 1px solid #d0a806
  border-top-right-radius 10px
  border-bottom-right-radius 10px
  padding 0
  transition-duration 0.1s
  &:hover
    color aquamarine
    cursor pointer
.twit:nth-child(2)
  opacity 0.7
.twit:nth-child(3)
  opacity 0.6

/*sec2*/
.sec2
  background-color #474747
  height 467px
  box-sizing border-box
  padding-top 32px
  padding-bottom 50px
  display flex
  flex-direction column
.sec2__header
  color #f5c506
  font-family "OpenSans", sans-serif
  font-size 39px
  font-weight 400
  text-transform uppercase
  letter-spacing 0.39px
  margin 0 auto
.screens
  display flex
  position relative
  margin 0 15px
  margin-top auto
  margin-bottom 0
  box-sizing border-box
  padding-bottom 40px
  padding-left 30px
  padding-top 40px
  align-items flex-end
  justify-content space-evenly
.screens__item
  background-repeat no-repeat
imgDesk = './assets/img/scrDesktop.png'
imgLap = './assets/img/scrLaptop.png'
imgSmart = './assets/img/scrSmart.png'
.screen-desktop
  width image-size(imgDesk)[0]
  height image-size(imgDesk)[1]
  background-image url(imgDesk)
  margin-bottom -40px
.screen-laptop
  width image-size(imgLap)[0]
  height image-size(imgLap)[1]
  background-image url(imgLap)
.screen-smart
  width image-size(imgSmart)[0]
  height image-size(imgSmart)[1]
  background-image url(imgSmart)

.discount-tag
  position absolute
  top 0
  left 0
  width 116px
  height 116px
  background-color #f5c506
  border-radius 100%
  line-height 116px
  text-align center
  color #ffffff
  font-family "PT Sans - Narrow Bold", sans-serif
  white-space nowrap
  font-size 19px
  font-weight 400
  text-transform uppercase
  letter-spacing 0.51px


/*footer*/
.footer-bg-wrapper
  background-color #4c4c4c
  box-shadow 0 -3px 5px rgba(0, 0, 0, 0.75)
footer
  display flex
  align-content flex-start
  padding 0 65px
  box-sizing border-box
  height 45px
.footer-logo-img
  width 31px
  height 31px
  margin auto 0
